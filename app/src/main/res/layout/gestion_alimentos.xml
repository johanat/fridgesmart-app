<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <!-- Franja superior -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#316986"> <!-- Color de fondo -->

        <!-- Icono de retroceso -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:contentDescription="Volver"
            app:tint="#FFFFFF" />

        <!-- Texto centrado -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GESTIÓN DE ALIMENTOS"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Contenido debajo de la franja -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
       android:layout_margin="36dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/buscador"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_buscador" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="¿Que estas buscando?"
            android:textSize="14dp"
            android:gravity="center">
        </TextView>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_filtro" />

        <!-- Fila 2 -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="46dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/icon_Carnes"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginEnd="36dp"
            android:background="@drawable/cuadrado_puntas_redondas"
            android:backgroundTint="#bbd7d7"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="CARNE"></TextView>

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:src="@drawable/carne"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iconoLacteos"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/cuadrado_puntas_redondas"
            android:backgroundTint="#bbd7d7"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="LACTEOS" />

            <ImageView
                android:id="@+id/icon_leche"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:src="@drawable/leche">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/iconoFrutas"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginEnd="36dp"
                android:orientation="vertical"
                android:background="@drawable/cuadrado_puntas_redondas"
                android:backgroundTint="#bbd7d7">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="FRUTAS" />

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:src="@drawable/frutas">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/iconoVerduras"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/cuadrado_puntas_redondas"
                android:backgroundTint="#bbd7d7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="VERDURAS" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="106dp"
                    android:layout_gravity="center"
                    android:src="@drawable/verdura"></ImageView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
